@{
    ViewData["Title"] = "Player";
}

<body class="body">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <img src="./../delMoro.jpg" alt="Santiago Del Moro" width="90%">
            </div>
        </div>
        <hr class="my-4">
        <div class="row">
            <div class="col-sm-12">
                <form method="post" action='@Url.Action("Jugar", "Home")'>
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Tu nombre">
                        <button class="btn btn-primary mt-2" type="submit" value="Guardar">
                            Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
@{
    ViewData["Title"] = "¿Quién quiere ser millonario?";
}

<body class="body">
    <div class="jumbotron jumbotron-fluid bg-transparent">
        <div class="container">
            <img src="./../delMoro.jpg" width="30%" height="200px" style="float: right;">
            <div class="general">
                <div class="comodin">
                    <button class="btn btn-primary">COMODIN 50/50</button>
                    <button class="btn btn-primary">DOBLE CHANCE</button>
                    <button class="btn btn-primary">SALTEAR PREGUNTA</button>
                </div>
                <div class="pregunta text-center">
                    <h1>@ViewBag.PreguntaActual.textoPregunta</h1>
                    <ul style="list-style: none; margin-right: 30px;">
                        @{
                            foreach (Respuestas item in ViewBag.ListaRespuestas)
                            {
                                <li>
                                    <a href='@Url.Action("PreguntaRespondida", "Home", new {Opcion = item.opcionRespuesta})'>
                                        <button class="opcion">@item.textoRespuesta</button>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="pozo">
                    <ul>
                        <li>$1.000.000</li>
                        <li>$800.000</li>
                        <li>$700.000</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                        <li>$---.---</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>